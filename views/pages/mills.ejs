<% if (success.length > 0) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>

<div class="jumbotron text-center mills-bg">
  <h1 class="heading-brand">All Mills</h1>
</div>

<div class="breadcrumb">
  <a href="/mills/create" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Add new mill</a>
</div>

<% if (query.length > 0) { %>
  <div class="alert alert-info">
    <strong>Search results for:</strong> <%= query %>
  </div>
<% } %>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Regin</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>

    <% for (var mill of mills) { %>
        <tr>
            <td><%= mill.name %></td>
            <td><%= mill.type %></td>
            <td><%= mill.region %></td>
            <td>
                <a href="/mills/<%= mill.slug %>" class="btn btn-sm btn-primary"><i class="fa fa-eye" aria-hidden="true"></i> View</a>
                <a href="/mills/<%= mill.slug %>/edit" class="btn btn-sm btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                <a href="/mills/<%= mill.slug %>/delete" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
            </td>
        </tr>
    <% } %>

  </tbody>
</table>


