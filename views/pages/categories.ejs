<% if (success.length > 0) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>

<div class="jumbotron text-center mills-bg">
  <h1 class="heading-brand">Manage Mill Data Categories</h1>
</div>

<div class="breadcrumb">
  <a href="/category/create" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Add new category</a>
</div>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Required</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% for (var category of categories) { %>
        <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td>
                <a href="/categories/<%= category.slug %>" class="btn btn-sm btn-primary"><i class="fa fa-eye" aria-hidden="true"></i> View</a>
                <a href="/categories/<%= category.slug %>/edit" class="btn btn-sm btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                <a href="/categories/<%= category.slug %>/delete" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
            </td>
        </tr>
    <% } %>

  </tbody>
</table>


